<% @tweets.each do |tweet| %>
<div class="tweet">
	<div class="profile-img">
		<%=tag("img", { :src => tweet.profile_image_url }, false) %>
	</div>
	<div class="tweet-content">
	<p>
		<%=h tweet.user_name %>
	</p>
	<p>
		<%=h tweet.text %>
	</p>
		<%=h tweet.id %> -- <%=h tweet.text_hash %>
		<div class="tweet-control">
			<%= link_to 'Show', tweet %> | 
    		<%= link_to 'Edit', edit_tweet_path(tweet) %> | 
    		<%= link_to 'Destroy', tweet, :confirm => 'Are you sure?', :method => :delete %>
		</div>
	</div>
</div>
<% end %>
<br />
<%= link_to("<< prev ", tweets_path(:page=>@current_page-1) ) if @current_page > 1%>
<% 1.upto(@pages) do |page| %>
	<%= link_to "#{page}", tweets_path(:page=>page) %>
<% end %>
<%= link_to(" next >>", tweets_path(:page=>@current_page+1) ) if @current_page < @pages%>
<br />
<%= link_to 'New tweet', new_tweet_path %>